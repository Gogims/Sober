@model IEnumerable<SoberBLL.Reviews.ReviewProfile>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
}

@{
    
    string[] regions = new string[] { "All Regions", "Northeast", "Midwest", "South", "West" };
    string[] sorts = new string[] { "Price (high to low)", "Price (low to high)", "Stars (high to low)", "Stars (low to high)", "Alphabetical (A to Z)", "Alphabetical (Z to A)" };
    string[] stars = new string[] { "All", "4 stars or higher", "3 stars or higher", "2 stars or higher" };
    string[] prices = new string[] { "All", "$0-$5,000", "$5,000-$10,000", "$10,000-$25,000", "$25,000" };
}

<div class="content white-bg">
    <div class="container">
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>Rehab Reviews</h2>
                        </div>
                    </div>
                    <div class="row form">
                        <div class="col-md-2">
                            @Html.DropDownList("region", new SelectList(regions, ViewBag.selectedregion), "Region", new { @class = "selectpicker" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownList("price", new SelectList(prices, ViewBag.selectedprice), "Price", new { @class = "selectpicker" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownList("stars", new SelectList(stars, ViewBag.selectedstars), "Stars", new { @class = "selectpicker" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">Filter</button>
                        </div>
                        <div class="col-md-2">

                        </div>
                        <div class="col-md-2">
                            @Html.DropDownList("sortby", new SelectList(sorts, ViewBag.selectedsortby), "Sort By", new { @class = "selectpicker" })
                        </div>
                    </div>

                    <ul class="listings">
                        @if (Model.Count() == 0)
                        {
                            <li class="row">
                                <h2>No Results found. Please change your search criteria</h2>
                            </li>
                        }
                        @foreach (var item in Model)
                        {
                            @Html.Partial("_Review", item)
                        }
                    </ul>
                </div>
                <div class="col-md-2">
                    Sponsored Ads
                    @Html.Partial("_Ads2")
                    @Html.Partial("_Ads3")
                </div>
            </div>
        }
    </div>
</div>