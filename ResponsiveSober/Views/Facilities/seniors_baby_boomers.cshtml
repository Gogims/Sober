@model IEnumerable<SoberModel.PaidListing>

@{
    ViewBag.Title = "Seniors/Baby Boomers - Find the best care right now";
    ViewBag.SelectedCategory = 15;
    Layout = "~/Views/Shared/_Master.cshtml";
}
@section includes
{
    @Scripts.Render("~/bundles/profile_scripts")
    @Styles.Render("~/content/profile_css")
}
@section head {
    <meta name="description" content="Complete list of Senior/Baby Boomers Treatment Centers with reviews, pictures, and cost information. Find the perfect fit at Sober.com right now!">
}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>

<div class="search-header">
    <div class="container">
        @Html.Partial("_facilitysearcharea")
    </div>
</div>

<div class="content white-bg">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("index", "home")">Home</a></li>
            <li>@Html.ActionLink("Directory", "index", "directory")</li>
            <li class="active">Seniors/Baby Boomers</li>
        </ol>
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Rehab Treatment Centers for Seniors and Baby Boomers</h2>
                    </div>
                </div>

                @Html.Partial("_PaidListing", Model)
            </div>

            <div class="col-md-2">
                <h5>Sponsored ads</h5>
                <ul class="link-list">
                    <li>@Html.Partial("_Ads2")</li>
                    <li>@Html.Partial("_Ads3")</li>
                </ul>
                @Html.Partial("_StateLinksSeo")
            </div>
        </div>        
        
        <div class="container">
            <div class="faq row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>
                            Seniors/BabyBoomers FAQs

                            @if (User.IsInRole("Admin"))
                            {
                                <span class="anchor" style="float: right;">Show Editor</span> 
                            }
                        </h4>
                    </div>
                </div>                

                @if (User.IsInRole("Admin"))
                {
                    using (Html.BeginForm("UpdateExtraContent", "Admin", FormMethod.Post))
                    {
                        string controller = ViewContext.RouteData.Values["controller"].ToString();
                        string action = ViewContext.RouteData.Values["action"].ToString();
                    
                        <input type="hidden" name="controller" value="@controller" />
                        <input type="hidden" name="action" value="@action" />
                        
                        <div id="editor">
                            <textarea id="content" class="ckeditor" name="content">@ViewBag.FAQ</textarea>

                            <div class="col-md-10"></div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    }
                }
                


                <div class="originalHTML col-md-12">
                    @Html.Raw(ViewBag.FAQ)
                </div>                
            </div>
        </div>
        
        <div class="row">
            @Html.Partial("_AdResponsive")
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#editor').toggle();        

        $('h4 .anchor').click(function () {
            $('#editor').toggle();

            if ($(this).text() == 'Show Editor') {
                $(this).text('Hide Editor');
            }
            else {
                $(this).text('Show Editor');
            }
        });
    });
</script>