@model IEnumerable<SoberModel.PaidListing>

@{
    ViewBag.Title = "Extended Care - Find the best care right now";
    ViewBag.SelectedCategory = 9;
    Layout = "~/Views/Shared/_Master.cshtml";
}
@section includes
{
    @Scripts.Render("~/bundles/profile_scripts")
    @Styles.Render("~/content/profile_css")
}
@section head {
    <meta name="description" content="Complete list of extended care Treatment Centers with reviews, pictures, and cost information. Find the perfect fit at Sober.com right now!">
    <link rel="canonical" href="http://www.sober.com/facilities/drug_alcohol" />
}

<div class="search-header">
    <div class="container">
        @Html.Partial("_facilitysearcharea")
    </div>
</div>

<div class="content white-bg">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("index", "home")">Home</a></li>
            <li>@Html.ActionLink("Directory", "index", "directory")</li>
            <li class="active">Extended Care</li>
        </ol>
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Extended Care</h2>
                    </div>
                </div>

                @Html.Partial("_PaidListing", Model)
            </div>

            <div class="col-md-2">
                <h5>Sponsored ads</h5>
                <ul class="link-list">
                    <li>@Html.Partial("_Ads2")</li>
                    <li>@Html.Partial("_Ads3")</li>
                </ul>
                @Html.Partial("_StateLinksSeo")
            </div>
        </div>

        <div class="row">
            @Html.Partial("_AdResponsive")
        </div>
    </div>
</div>