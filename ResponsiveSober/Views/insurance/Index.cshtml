@model IEnumerable<SoberModel.Insurance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<div class="content white-bg">
    <div class="container">        
        <h1>Add New Insurance</h1>            
        <div class="col-md-5">
            @using (Html.BeginForm("create", "insurance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                SoberModel.Insurance insuranceProvider = new SoberModel.Insurance();

                @Html.Partial("create", insuranceProvider)
            }
        </div>
        <div class="col-md-7">

            <div class="table-responsive">
                <table class="table table-bordered">
                    <tr>
                        <th>ID</th>
                        <th>Provider Name</th>
                        <th>Logo</th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ins_ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ins_ProviderName)
                            </td>
                            <td>
                                @{
                                    string insuranceImage = "http://www.sober.com/contents//insurance/" + item.Ins_ProviderLogo;                        
                                }

                                <img src="@insuranceImage" />
                            </td>
                            <td>
                                @Html.ActionLink("  Edit  ", "Edit", new { id = item.Ins_ID })
                            </td>
                            <td>
                                @Html.ActionLink("  Delete  ", "Delete", new { id = item.Ins_ID })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>