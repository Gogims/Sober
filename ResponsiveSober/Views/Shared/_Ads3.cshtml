@{
    string banner = "Other-Main-G3-120x240";
    if (ViewBag.StateAbbreviation != null && ViewBag.FacilityAbbreviation != null)
    {
        banner = ViewBag.FacilityAbbreviation + "-" + ViewBag.StateAbbreviation + "-" + "G3-120x240";
    }
    else if (ViewBag.StateAbbreviation == null && ViewBag.FacilityAbbreviation != null)
    {
        banner = ViewBag.FacilityAbbreviation + "-Main-G3-120x240";
    }
}
<script type='text/javascript'>GA_googleAddSlot("ca-pub-4181438337538149", "@banner");</script>

